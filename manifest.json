{
  "manifest_version": 3,
  "name": "Prompt Navigator (All-in-One)",
  "version": "5.1",
  "description": "Adds a sidebar to Gemini, ChatGPT, Grok, Claude, and DeepSeek to easily navigate through your prompts.",
  "permissions": ["storage"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://gemini.google.com/*",
        "https://chat.openai.com/*",
        "https://chatgpt.com/*",
        "https://grok.com/*",
        "https://claude.ai/*",
        "https://chat.deepseek.com/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icons12.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "icons/image.png"
      ],
      "matches": [
        "https://gemini.google.com/*",
        "https://chat.openai.com/*",
        "https://chatgpt.com/*",
        "https://grok.com/*",
        "https://claude.ai/*",
        "https://chat.deepseek.com/*"
      ]
    }
  ]
}